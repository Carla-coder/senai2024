generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Hoteis {
  id    Int      @id @default(autoincrement())
  nome  String
  valor Float
  data  DateTime

  @@index([nome], name: "idx_nome_hotel")
}

model Pontos {
  id       Int    @id @default(autoincrement())
  nome     String
  endereco String
  telefone String
  valor    Float

  @@index([nome], name: "idx_nome_ponto")
}

model Destinos {
  id    Int      @id @default(autoincrement())
  nome  String
  valor Float
  data  DateTime

  @@index([nome], name: "idx_nome_destino")
}
