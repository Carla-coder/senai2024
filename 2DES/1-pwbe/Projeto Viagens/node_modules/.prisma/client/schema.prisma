generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Hoteis {
  id        Int       @id @default(autoincrement())
  nome      String    @db.VarChar(255)
  valor     Decimal?  @db.Decimal(10, 2)
  avaliacao String    @db.VarChar(255)
  email     String?   @db.VarChar(255)
  site      String?   @db.VarChar(255)
  destinoId Int?
  destinos  Destino[] @relation("HotelDestino")
}

model Destino {
  id       Int       @id @default(autoincrement())
  nome     String    @db.VarChar(255)
  valor    Decimal?  @db.Decimal(10, 2)
  data     DateTime? @default(now())
  hoteis   Hoteis[]  @relation("HotelDestino")
  pontos   Ponto[]
  hoteisId Int?
}

model Ponto {
  id        Int      @id @default(autoincrement())
  nome      String   @db.VarChar(255)
  endereco  String   @db.VarChar(255)
  telefone  String   @unique
  valor     Decimal? @default(0) @db.Decimal(10, 2)
  destinoId Int?
  destinos  Destino? @relation(fields: [destinoId], references: [id])
}
